@model AddStadiumModel

<form asp-controller="Team" asp-action="Add" method="post">
    <div class="row">
        <div class="col-6">
            <label asp-for="StadiumName"></label>
            <input asp-for="StadiumName" class="form-control" />
            <span asp-validation-for="StadiumName" class="small text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <label asp-for="Capacity"></label>
            <input asp-for="Capacity" class="form-control" />
            <span asp-validation-for="Capacity" class="small text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-success mt-2">Submit</button>
        </div>
    </div>
</form>
