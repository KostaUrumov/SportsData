@using SportsData.Data.Models;
@model List<Coach>


<div class="text-center">
    <img src=@Url.Content("https://cdn.iconscout.com/icon/premium/png-256-thumb/football-coach-1653701-1400018.png") />
</div>


<div class="text center">
    <div class="row">
        <div class="col-sm">
            <a class="nav-link text-dark" asp-area="" asp-controller="Coach" asp-action="NewCoach">Add new Coach</a>
        </div>
        <div class="col-sm">
            <a class="nav-link text-dark" asp-area="" asp-controller="Coach" asp-action="CoachesWIthoutTeam">Free Coaches</a>
        </div>
        <div class="col-sm">
            <a class="nav-link text-dark" asp-area="" asp-controller="Coach" asp-action="HiredCoaches">Free Coaches</a>
        </div>
    </div>
</div>


<table class="table">
    <thead>
        @for (int i = 0; i < Model.Count(); i++)
        {
            int line = i + 1;
            string hire = "";
            if (@Model[i].isHired == false)
            {
                hire += "No";
            }
            else
            {
                hire += "Yes";
                
            }
            <tr>
                <th scope="col">#@line</th>
                <th scope="col">@Model[i].FirstName</th>
                <th scope="col">@Model[i].LastName</th>
                <th scope="col">@Model[i].Age</th>
                <th scope="col">@hire</th>

            </tr>
        }
    </thead>

</table>