@model AddCoachModel

<form asp-controller="Team" asp-action="Add" method="post">
    <div class="row">
        <div class="col-6">
            <label asp-for="FirtsName"></label>
            <input asp-for="FirtsName" class="form-control" />
            <span asp-validation-for="FirtsName" class="small text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="small text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="small text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-success mt-2">Submit</button>
        </div>
    </div>
</form>
