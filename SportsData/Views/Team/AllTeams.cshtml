@using SportsData.Data.Models;
@model List<Team>

<table class="table">
    <thead>
        @for (int i = 0; i < Model.Count(); i++)
        {
            int line = i + 1;
            string name = Model[i].Coach.FirstName;
            <tr>

                <th scope="col">#@line</th>
                <th scope="col">@Model[i].Name</th>
                <th scope="col">@Model[i].SportName</th>
            </tr>
        }
    </thead>

    <a class="nav-link text-dark" asp-area="" asp-controller="Team" asp-action="AddTeam">Add new Team</a>
</table>